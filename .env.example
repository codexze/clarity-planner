# Environment Configuration
# Set DJANGO_ENV to control which environment file to load:
# - development: uses .env.local
# - production: uses .env.production  
# - (fallback): uses .env
# DJANGO_ENV=development

# Backend environment variables
DATABASE_URL=postgres://USERNAME:PASSWORD@HOSTNAME:PORT/DBNAME

# Security Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Host Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:8080
CSRF_TRUSTED_ORIGINS=http://localhost:8080

# API Pagination
PAGE_SIZE=10

# JWT Configuration
ACCESS_TOKEN_LIFETIME_HOURS=1
REFRESH_TOKEN_LIFETIME_MINUTES=45
ROTATE_REFRESH_TOKENS=True
BLACKLIST_AFTER_ROTATION=True

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=America/Paramaribo
USE_I18N=True
USE_L10N=False
USE_TZ=True

# Frontend environment variables
# Copy the frontend variables to your frontend .env.local file

# API Configuration
VUE_APP_API_BASE_URL=http://localhost:8080/
VUE_APP_WS_BASE_URL=ws://localhost:8080/

# Environment Settings
VUE_APP_ENVIRONMENT=development
VUE_APP_DEBUG=true

# Optional: Additional configuration
# VUE_APP_SENTRY_DSN=your_sentry_dsn_here
# VUE_APP_ANALYTICS_ID=your_analytics_id_here
