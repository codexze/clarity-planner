# ===============================================================================
# üóìÔ∏è CLARITY PLANNER - Environment Configuration Template
# ===============================================================================
# 
# üìã SETUP INSTRUCTIONS:
# 1. Copy this file to .env.local: cp .env.example .env.local
# 2. Update the values below for your local development environment
# 3. Never commit .env.local to version control
#
# üîÑ ENVIRONMENT LOADING:
# - development: loads .env.local
# - production: loads .env.production
# - fallback: loads .env
# ===============================================================================

# ===============================================================================
# üåç ENVIRONMENT SETTINGS
# ===============================================================================
DJANGO_ENV=development
DEBUG=True
LANGUAGE_CODE=en-us
TIME_ZONE=America/Paramaribo
USE_I18N=True
USE_L10N=False
USE_TZ=True

# ===============================================================================
# üîê SECURITY CONFIGURATION
# ===============================================================================
# ‚ö†Ô∏è IMPORTANT: Change this to a secure random string for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=change-this-to-a-very-secure-random-string-for-production

# ===============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===============================================================================
# PostgreSQL connection string format:
# postgresql://username:password@hostname:port/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/clarity_db

# ===============================================================================
# üåê NETWORK & CORS SETTINGS
# ===============================================================================
# Allowed hostnames for Django
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend URL for CORS (Cross-Origin Resource Sharing)
CORS_ALLOWED_ORIGINS=http://localhost:8080
CSRF_TRUSTED_ORIGINS=http://localhost:8080

# ===============================================================================
# üîÑ REDIS CONFIGURATION (WebSockets & Caching)
# ===============================================================================
# Redis connection for real-time features and session storage
REDIS_URL=redis://localhost:6379/0

# ===============================================================================
# üîë JWT AUTHENTICATION SETTINGS
# ===============================================================================
# Token lifetimes
ACCESS_TOKEN_LIFETIME_HOURS=1
REFRESH_TOKEN_LIFETIME_MINUTES=45

# Security options
ROTATE_REFRESH_TOKENS=True
BLACKLIST_AFTER_ROTATION=True

# ===============================================================================
# üìß EMAIL CONFIGURATION (Optional)
# ===============================================================================
# For development: console backend prints emails to terminal
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production: configure SMTP settings
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password

# ===============================================================================
# ‚öôÔ∏è API SETTINGS
# ===============================================================================
# Default pagination size for API responses
PAGE_SIZE=10

# ===============================================================================
# üé® FRONTEND CONFIGURATION
# ===============================================================================
# These variables should be copied to your frontend .env.local file
# (Vue.js environment variables must start with VUE_APP_)

# Backend API endpoint
VUE_APP_API_BASE_URL=http://localhost:8000/api/v1/

# WebSocket endpoint for real-time features
VUE_APP_WS_BASE_URL=ws://localhost:8000/ws/

# Application settings
VUE_APP_ENVIRONMENT=development
VUE_APP_DEBUG=true
VUE_APP_TITLE=Clarity Planner
VUE_APP_VERSION=1.0.0

# ===============================================================================
# üìä OPTIONAL INTEGRATIONS (Uncomment as needed)
